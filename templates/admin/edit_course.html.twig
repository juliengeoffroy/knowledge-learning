{% extends 'base.html.twig' %}

{% block title %}Modifier Cours{% endblock %}

{% block body %}
<div class="form-container">
    <h2>Modifier le cours : {{ course.title }}</h2>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn-save">ðŸ’¾ Enregistrer</button>
        <a href="{{ path('app_admin') }}" class="btn-return">â†© Retour</a>
    {{ form_end(form) }}
</div>

<style>
.form-container {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.form-group {
    margin-bottom: 1rem;
}
.form-control {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 6px;
}
.btn-save {
    background: #28a745;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
    margin-right: 1rem;
}
.btn-save:hover {
    background: #218838;
}
.btn-return {
    background: #6c757d;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s ease;
}
.btn-return:hover {
    background: #5a6268;
}
</style>
{% endblock %}
